<Page x:Class="Adminn.Customer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Customer">

    <Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="399*"/>
                <ColumnDefinition Width="401*"/>
            </Grid.ColumnDefinitions>
            <!--  DataGrid  -->
            <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionMode="Single" Grid.ColumnSpan="2" Margin="0,62,0,45" BorderBrush="Black">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="100" Header="Date" />
                    <DataGridTextColumn Width="120" Header="Phyto Number" />
                    <DataGridTextColumn Width="150" Header="Party Name" />
                    <DataGridTextColumn Width="120" Header="Export Through" />
                    <DataGridTextColumn Width="120" Header="Plant" />
                    <DataGridTextColumn Width="120" Header="Importer" />
                    <DataGridTextColumn Width="80" Header="Carton" />
                    <DataGridTextColumn Width="80" Header="Weight" />
                    <DataGridTextColumn Width="80" Header="Rate" />
                    <DataGridTextColumn Width="100" Header="Amount" />
                    <DataGridTextColumn Width="100" Header="Received" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.ColumnSpan="2" Height="45" VerticalAlignment="Bottom" Background="White">
                <Button Content="Add New Customer" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.718,-0.081" Background="#FF065668" BorderBrush="#FF065668" Width="118" Foreground="White" Height="27"/>
            </Grid>
        </Grid>
        <Grid Background="#FF065668" Height="61" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,13,0,0" TextWrapping="Wrap" Text="👥 Customer" VerticalAlignment="Top" Width="156" Foreground="White" Background="#FF065668"  FontSize="22" FontWeight="Bold"/>

    </Grid>
</Page>
