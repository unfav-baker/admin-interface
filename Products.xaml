<Page x:Class="Adminn.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>

        <Grid>
            <!--  DataGrid  -->
            <DataGrid
            Margin="0,61,0,45"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionMode="Single" BorderBrush="Black">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="100" Header="Product ID" />
                    <DataGridTextColumn Width="120" Header="Supplier ID" />
                    <DataGridTextColumn Width="150" Header="Category" />
                    <DataGridTextColumn Width="120" Header="Quantity" />
                    <DataGridTextColumn Width="120" Header="Price" />
                    <DataGridTextColumn Width="120" Header="Batch No" />
                    <DataGridTextColumn Width="80" Header="Status" />
                    <DataGridTextColumn Width="80" Header="Created At" />
          
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.ColumnSpan="2" Height="45" VerticalAlignment="Bottom" Background="White">
                <Button Content="Create Report" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.718,-0.081" Background="#FF065668" BorderBrush="#FF065668" Width="118" Foreground="White" Height="27"/>
            </Grid>
        </Grid>
        <Grid Background="#FF065668" Height="61" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,13,0,0" TextWrapping="Wrap" Text="📦 Products" VerticalAlignment="Top" Width="161" Foreground="White" Background="#FF065668"  FontSize="22" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.707"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.777"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</Page>
