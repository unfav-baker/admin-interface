<Page
    x:Class="Adminn.Reports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Adminn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Reports"
    d:DesignHeight="390"
    d:DesignWidth="623"
    mc:Ignorable="d">



    <Grid>
        <!--  DataGrid  -->
        <DataGrid
            Margin="0,61,0,45"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionMode="Single" BorderBrush="Black">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100" Header="Report ID" />
                <DataGridTextColumn Width="120" Header="Report Type" />
                <DataGridTextColumn Width="150" Header="Date Generated" />
                <DataGridTextColumn Width="120" Header="Status" />
                <DataGridTextColumn Width="120" Header="Created At" />
                <DataGridTextColumn Width="120" Header="Updated At" />
               
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.ColumnSpan="2" Height="45" VerticalAlignment="Bottom" Background="White">
            <Button Content="View Reports" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.718,-0.081" Background="#FF065668" BorderBrush="#FF065668" Width="118" Foreground="White" Height="27"/>
        </Grid>
        <Grid Background="#FF065668" Height="61" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,13,0,0" TextWrapping="Wrap" Text=" 📝 Reports" VerticalAlignment="Top" Width="154" Foreground="White" Background="#FF065668"  FontSize="22" FontWeight="Bold"/>
    </Grid>




</Page>
