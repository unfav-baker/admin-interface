<Page x:Class="Adminn.Export_Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Export_Orders">

    <Grid>
        <Grid>
            <!--  DataGrid  -->
            <DataGrid
     Margin="0,61,0,0"
     AutoGenerateColumns="False"
     CanUserAddRows="False"
     HeadersVisibility="Column"
     IsReadOnly="True"
     SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="100" Header="Order ID" />
                    <DataGridTextColumn Width="120" Header="Customer Name" />
                    <DataGridTextColumn Width="150" Header="Product ID" />
                    <DataGridTextColumn Width="120" Header="Quantity Ordered" />
                    <DataGridTextColumn Width="120" Header="Order Date" />
                    <DataGridTextColumn Width="120" Header="Delivery Date" />
                    <DataGridTextColumn Width="80" Header="Order Status" />
                    <DataGridTextColumn Width="80" Header="Total Price" />
                    <DataGridTextColumn Width="120" Header="Payment Status" />
                    <DataGridTextColumn Width="120" Header="Supplier ID" />


                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Background="#FF065668" Height="61" VerticalAlignment="Top"/>
        <Button HorizontalAlignment="Right" Content="View Orders" Margin="0,21,49,0" VerticalAlignment="Top" RenderTransformOrigin="0.718,-0.081" Background="White" BorderBrush="White" Width="118" Height="20">
            
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="24,13,0,0" TextWrapping="Wrap" Text="📤 Orders" VerticalAlignment="Top" Width="151" Foreground="White" Background="#FF065668"  FontSize="22" FontWeight="Bold" FontFamily="Cascadia Code"/>


    </Grid>
</Page>
